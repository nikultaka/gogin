# Application Configuration
APP_NAME=Go API System
APP_ENV=development
APP_PORT=8080
APP_VERSION=v1
LOG_LEVEL=info
TRUSTED_PROXIES=127.0.0.1
ALLOW_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT_RPS=100

# Database Configuration (PostgreSQL 16)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_NAME=goapi
DB_SSLMODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5

# Redis Configuration (Redis 7 + Sentinel)
REDIS_ADDRESSES=localhost:6379
REDIS_MASTER_NAME=mymaster
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=2
REDIS_USE_SENTINEL=false

# NATS JetStream Configuration
NATS_URLS=nats://localhost:4222
NATS_TOKEN=
NATS_STREAM_NAME=NOTIFICATIONS

# OAuth2 Configuration
OAUTH_ACCESS_TOKEN_EXPIRY=3600
OAUTH_REFRESH_TOKEN_EXPIRY=2592000
JWT_SECRET=your_very_secure_jwt_secret_key_here_min_32_chars
JWT_ISSUER=goapi

# SendGrid Configuration
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Go API System
SENDGRID_REPLY_TO_EMAIL=support@yourdomain.com

# Twilio Configuration
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# Storage Configuration
STORAGE_TYPE=local
STORAGE_BASE_PATH=./uploads
S3_BUCKET=
S3_REGION=us-east-1
S3_ACCESS_KEY=
S3_SECRET_KEY=
MAX_FILE_SIZE=10485760

# Google Analytics 4 Configuration
GA4_MEASUREMENT_ID=
GA4_API_SECRET=
GA4_ENABLED=false
